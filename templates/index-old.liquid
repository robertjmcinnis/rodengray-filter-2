<section class="index-page">
	<figure class="sixteen columns alpha omega hero {{ settings.landing_hero_headline_color }} ">
		<a href="{{ settings.landing_hero_link }}">
			<img class="scale-with-grid" src="{{ "landing_hero.jpg" | asset_url }}" alt="{{ settings.landing_hero_alt }}">
			{% if settings.landing_hero_headline_enabled %}
				<figcaption>
					<h2>{{ settings.landing_hero_headline }}</h2>
					{% if settings.landing_hero_subheadline_enabled %}
						<h3>{{ settings.landing_hero_subheadline }}</h3>
					{% endif %}
				</figcaption>
			{% endif %}
		</a>
	</figure>
	{% if settings.landing_row1_enabled %}
		{% assign row1_cols = 0 %}
		{% if settings.landing_row1_cols == "1" %}
			{% assign row1_cols = 1 %}
		{% endif %}
		{% if settings.landing_row1_cols == "2" %}
			{% assign row1_cols = 2 %}
		{% endif %}
		{% if settings.landing_row1_cols == "3" %}
			{% assign row1_cols = 3 %}
		{% endif %}
		<div class="row">
			{% if row1_cols >= 1 %}
				<figure class="{{ settings.landing_row1_img1_hcolor }} {{ settings.landing_row1_img1_width }} alpha{% if row1_cols == 1 %} omega{% endif %}">
					<a href="{{ settings.landing_row1_img1_link }}">
						<img class="scale-with-grid" src="{{ 'landing_row1_img1.jpg' | asset_url }}" alt="{{ settings.landing_row1_img1_alt }}">
					</a>
					{% if settings.landing_row1_img1_headline_enabled %}
						<figcaption>
							<h2>{{ settings.landing_row1_img1_headline }}</h2>
							{% if settings.landing_row1_img1_subheadline_enabled %}
								<h3>{{ settings.landing_row1_img1_subheadline }}</h3>
							{% endif %}
						</figcaption>
					{% endif %}
				</figure>
			{% endif %}
			{% if row1_cols >= 2 %}
				<figure class="{{ settings.landing_row1_img2_hcolor }} {{ settings.landing_row1_img2_width }}{% if row1_cols == 2 %} omega{% endif %}">
					<a href="{{ settings.landing_row1_img2_link }}">
