						{% if settings.landing_row1_img2_headline_enabled %}
							<figcaption>
								<h2>{{ settings.landing_row1_img2_headline }}</h2>
								{% if settings.landing_row1_img2_subheadline_enabled %}
									<h3>{{ settings.landing_row1_img2_subheadline }}</h3>
								{% endif %}
							</figcaption>
						{% endif %}
					</a>
				</figure>
			{% endif %}
			{% if row1_cols >= 3 %}
				<figure class="{{ settings.landing_row1_img3_hcolor }} {{ settings.landing_row1_img3_width }} omega">
					<a href="{{ settings.landing_row1_img3_link }}">
						<img class="scale-with-grid" src="{{ 'landing_row1_img3.jpg' | asset_url }}" alt="{{ settings.landing_row1_img3_alt }}">
						{% if settings.landing_row1_img3_headline_enabled %}
							<figcaption>
								<h2>{{ settings.landing_row1_img3_headline }}</h2>
								{% if settings.landing_row1_img3_subheadline_enabled %}
									<h3>{{ settings.landing_row1_img3_subheadline }}</h3>
								{% endif %}
							</figcaption>
						{% endif %}
					</a>
				</figure>
			{% endif %}
		</div>
	{% endif %}
